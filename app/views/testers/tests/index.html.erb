<span>Next Payout: $<span id="money-earned">30.00</span>
<span id="tests-taken-wrapper">Tests Taken: <span id="tests-taken"><%= current_user.tests_taken_count %></span></span></span>

<h2 style="margin-bottom:0px;">Available Tests</h2>

<div id="tests">
	<%- @tests.each do |test| %>
	    <div class="tester-test <%= test.class.name.parameterize %>" id="test-<%= test.to_param %>">
	        <span class="test-payout">
	        	<%= number_to_currency test.payout %>
	        </span>
	        <span class="test-title" style="background-image: url('<%= test.image_a.url(:presentation) %>');"></span>

	        <span class="test-link">
	            <h4><%= test.title %></h4>
	            <p><%= test.question %></p>
	            <%= link_to testers_test_path(test), class: "take-test-link" do %>
		            <button>Take this test!</button>
		          <%- end %>
	        </span>
	    </div>
	<%- end %>
</div>
<div style="clear: both;"></div>