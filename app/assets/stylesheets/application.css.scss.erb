/* USEPHORIA */

* {font-family: "proxima-nova","Roboto",sans-serif;}

body {
	margin:0px;
	padding:0px;
	color:#222;
	font-size:100%;
	min-width:980px;
}

a {color:#369;}

header { color: black; }
nav > ul > li { float: left; list-style: none; margin-left: 5px; }
nav > ul { clear: both; }
#container { 
	width: 980px; 
	margin: 0 auto; 
	padding-bottom: 60px;
	padding-top:20px;
	min-height:500px;
}


.highlight {
	background: #34495e;
	color:#fff;
	width: 600px;
	margin-top: -40px;
	position: absolute;
	padding: 10px 50px;
	border-radius: 5px;
	left: 25%;
	text-align: center;
	ul {
		list-style-type:none;
		li {
			display:inline-block;
			color:#fff;
			padding: 3px 60px 0px 33px;
			height:25px;
			&.find-survey {background:url(<%= asset_path 'icon-find.png' %>) no-repeat;}
			&.give-feedback {padding-left:40px;background:url(<%= asset_path 'icon-message.png' %>) no-repeat;}
			&.get-paid {padding-left:38px;background:url(<%= asset_path 'icon-pay.png' %>) no-repeat;}
		}
	}

}

h1 {
	font-size:2.5em;
	/*background:url(<%= asset_path 'logo-check.png' %>) no-repeat;
	padding-left:54px;*/
	span {
		color:lightgoldenrodyellow;
		font-weight:300;
	}
	a {
		text-decoration:none;
		color:lightgoldenrodyellow;
	}
}

h2 {
	margin-top: 30px;
	font-size: 2em;
	font-weight: normal;
}



.tiptop {
	background:#333;
	width:100%;
	min-height:50px;
	margin:0px;
}

.tiptop ul {
	width:980px;
	list-style-type: none;
	margin:0 auto;
	text-align: right;
}

.tiptop ul li {
	display:inline-block;
	padding:15px 20px;
}

.tiptop ul li a {
	color:#fff;
	text-decoration: none;
	font-size:.9em;
}

.tiptop ul li a:hover {
	color:lightyellow;
}

.tiptop .signin a {
	padding: 3px 20px 6px;
	background: green;
	border-radius: 3px;
}

header {
	background:url(<%= asset_path 'blurred-bgd.jpg' %>) no-repeat;
	background-size: 100%;
	width:100%;
	color:#fff;
}

.header {
	margin:0 auto;
	width:980px;
	padding:20px 20px 110px 20px;
	overflow: hidden;
}


.header-left {
	width:45%;
	min-width:40%;
	float:left;
	padding-right:5%;
}

.header-right {
	width:50%;
	float:right;
	text-align:right;
}

h1 {}
p.tagline {line-height:1.5;font-size:16px;}

button {	
	padding: 10px 20px;
	background: #d35400;
	border: none;
	border-radius: 3px;
	font-size: 20px;
	color: #fff;
	-webkit-box-shadow: 3px 3px 0px rgba(110, 72, 3,1.0);
	-moz-box-shadow: 3px 3px 0px rgba(110, 72, 3,1.0);
	box-shadow: 3px 3px 0px rgba(110, 72, 3,1.0);
	cursor:pointer;
	margin-top:50px;
}

button:hover {
	background: #e67e22;
}


/* HIGHLIGHT */


.highlight {
	background: #34495e;
	color:#fff;
	width: 600px;
	margin-top: -40px;
	position: absolute;
	padding: 10px 50px;
	border-radius: 5px;
	left: 25%;
	text-align: center;
}


/* MID SECTION */


.middle {
	width:100%;
	background:#eee;
	min-height:100px;
	color:#222;
	padding-top:50px;
}

.midsection {
	width:980px;
	padding:60px 20px 90px 20px;
	margin:0 auto;
	overflow:hidden;
	div {
		height:250px;
		h2 {
		&:before {
			content: "\201C";
			}
		&:after {
			content: "\201D";
			}
		}
	}
}

.col1 {
	float:left;
	width:29%;
	margin-right:3%;
	padding-right:3%;
	border-right: solid 1px #ccc;
}

.col2 {
	float:left;
	width:29%;
	margin-right:3%;
	padding-right:3%;
	border-right: solid 1px #ccc;
}

.col3 {
	float:left;
	width:29%;
}


p.question {
	margin-bottom: 50px;
}

ul.a-b-choices {
	list-style-type:none;
	margin-left:-40px;
		li {
			display:inline-block;
			width:45%;
			padding-right:5%;
			&#b {
				padding-right:0px;
		}
			img {
				width: 350px;
				overflow:hidden;
		}
		input[type="radio"] {
		    -webkit-appearance: checkbox;
		    -moz-appearance: checkbox;
		    -ms-appearance: checkbox;     /* not currently supported */
		    -o-appearance: checkbox;      /* not currently supported */
		}
		.input {
			padding: 10px;
			background: #ccc;
		}
		.picture {
			text-align: center;
			background: #eee;
			padding: 30px 0px;
		}
	}
}


footer {
	background:#333;

	.footer {
		margin:0 auto;
		width:980px;
		padding:20px;
		color:#fff;
		overflow:hidden;
		.description {
			color:lightyellow;
			float:right;
			width:27%;
			padding-left:3%
		}
		.developers {
			float:left;
			width:47%;
		}
	}
}


