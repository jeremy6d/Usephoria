= simple_form_for [:clients, @yes_or_no_test], html: { multipart: true } do |form|
  .form_inputs
    = form.input :title
    = form.input :active, as: :boolean
    = form.input :question, placeholder: "Do you like this idea?", hint: "Describe why a tester would like or dislike"
    = form.input :image, as: :file
  .form-actions
    = form.button :submit