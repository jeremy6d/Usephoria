button {	
	padding: 10px 20px;
	background: #d35400;
	border: none;
	border-radius: 3px;
	font-size: 20px;
	color: #fff;
	-webkit-box-shadow: 3px 3px 0px rgba(110, 72, 3,1.0);
	-moz-box-shadow: 3px 3px 0px rgba(110, 72, 3,1.0);
	box-shadow: 3px 3px 0px rgba(110, 72, 3,1.0);
	cursor:pointer;
	margin-top:50px;
}

button:hover {
	background: #e67e22;
}


