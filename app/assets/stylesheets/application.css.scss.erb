/* USEPHORIA */

* {font-family: "proxima-nova","Roboto",sans-serif;}

body {
	margin:0px;
	padding:0px;
	color:#222;
	font-size:100%;
	min-width:980px;
}

header { color: black; }
nav > ul > li { float: left; list-style: none; margin-left: 5px; }
nav > ul { clear: both; }


.highlight {
	background: #34495e;
	color:#fff;
	width: 600px;
	margin-top: -40px;
	position: absolute;
	padding: 10px 50px;
	border-radius: 5px;
	left: 25%;
	text-align: center;
	ul {
		list-style-type:none;
		li {
			display:inline-block;
			color:#fff;
			padding: 3px 60px 0px 33px;
			height:25px;
			&.find-survey {background:url(<%= asset_path 'icon-find.png' %>) no-repeat;}
			&.give-feedback {padding-left:40px;background:url(<%= asset_path 'icon-message.png' %>) no-repeat;}
			&.get-paid {padding-left:38px;background:url(<%= asset_path 'icon-pay.png' %>) no-repeat;}
		}
	}

}

h1 {
	font-size:2.5em;
	/*background:url(<%= asset_path 'logo-check.png' %>) no-repeat;
	padding-left:54px;*/
	span {
		color:lightgoldenrodyellow;
		font-weight:300;
	}
}

h2 {
	margin-top: 30px;
	font-size: 2em;
	font-weight: normal;
}



.tiptop {
	background:#333;
	width:100%;
	min-height:50px;
	margin:0px;
}

.tiptop ul {
	width:980px;
	list-style-type: none;
	margin:0 auto;
	text-align: right;
}

.tiptop ul li {
	display:inline-block;
	padding:15px 20px;
}

.tiptop ul li a {
	color:#fff;
	text-decoration: none;
	font-size:.9em;
}

.tiptop ul li a:hover {
	color:lightyellow;
}

.tiptop .signin a {
	padding: 3px 20px 6px;
	background: green;
	border-radius: 3px;
}

header {
	background:url(<%= asset_path 'blurred-bgd.jpg' %>) no-repeat;
	background-size: 100%;
	width:100%;
	color:#fff;
	min-height:200px;
}

.header {
	margin:0 auto;
	width:980px;
	padding:20px 20px 110px 20px;
	overflow: hidden;
}


.header-left {
	width:45%;
	min-width:40%;
	float:left;
	padding-right:5%;
}

.header-right {
	width:50%;
	float:right;
	text-align:right;
}

h1 {}
